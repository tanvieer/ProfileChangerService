<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sensor.service.tanvir.profilechangerservice.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <Button
            android:text="Start PocketMode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPocket"
            android:onClick="startPocketMode"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Start TableMode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonTable"
            android:onClick="startTableMode"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Start LightMode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLight"
            android:onClick="startLightMode"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <Button
            android:text="Stop All Service"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonStop"
            android:onClick="stopButton"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/buttonStart"
            android:layout_alignStart="@+id/buttonStart" />


    </LinearLayout>
</RelativeLayout>
